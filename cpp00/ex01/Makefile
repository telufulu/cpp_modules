#******************************************************************************#
#								COMPILER									   #
#******************************************************************************#
CXX			=	g++
CXXFLAGS	=	-Wall -Werror -Wextra -std=c++98

#******************************************************************************#
#								SOURCES										   #
#******************************************************************************#
NAME		=	phonebook
FILES		=	PhoneBook.cpp Contact.cpp main.cpp
OBJS		=	$(FILES:%.cpp=$O%.o)
INCLUDES	=	PhoneBook.hpp Contact.hpp

#******************************************************************************#
#								DIRECTORIES									   #
#******************************************************************************#
O			=	objs/
I			=	.

#******************************************************************************#
#								RULES										   #
#******************************************************************************#
all:		$(NAME)

$(NAME):	$(OBJS)
	@$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

$O%.o:		%.cpp
	@[ -d $O ] || mkdir -p $O
	@$(CXX) $(CXXFLAGS) -I $(I) -c $< -o $@

clean:
	@rm -rf $O

fclean:	clean
	@rm -rf $(NAME)

re:	fclean all

.PHONY: all clean fclean re
