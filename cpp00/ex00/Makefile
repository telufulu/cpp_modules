#******************************************************************************#
#								COMPILER									   #
#******************************************************************************#
CXX			=	c++
CXXFLAGS	=	-Wall -Werror -Wextra

#******************************************************************************#
#								SOURCES										   #
#******************************************************************************#
NAME		=	megaphone
FILES		=	megaphone.cpp
O			=	objs/
OBJS		=	$(FILES:%.cpp=$O%.o)

#******************************************************************************#
#								RULES										   #
#******************************************************************************#
all:		$(NAME)

$(NAME):	$(OBJS)
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

$O%.o:		%.cpp
	@[ -d $O ] || mkdir -p $O
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -rf $O

fclean:	clean
	@rm -rf $(NAME)

re:	fclean all

.PHONY: all clean fclean re
